<Window x:Class="FileExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExplorer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:FileInfoViewModel}">
            <TextBlock Text="{Binding Caption}"/>
        </DataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type local:DirectoryInfoViewModel}" ItemsSource="{Binding Items}">
            <TextBlock Text="{Binding Caption}" FontWeight="Bold"/>
        </HierarchicalDataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.90*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Name="OpenFile" Click="OpenDirMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="_Exit" Name="ExitProgram" Click="ExitProgram_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <TreeView Name="DiskTreeView" ItemsSource="{Binding Root.Items}" Grid.Row="1" Grid.Column="0">

        </TreeView>
        <StackPanel Grid.Row="2" Grid.RowSpan="2" Grid.Column="0">
            <StatusBar Name="FileProperties"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" Grid.Column="1">
            <TextBlock Name="FileContent"/>
        </ScrollViewer>
    </Grid>
</Window>
